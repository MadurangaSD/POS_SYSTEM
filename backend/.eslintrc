{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": 0,
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "indent": ["error", 2]
  }
}
